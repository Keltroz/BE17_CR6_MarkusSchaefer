{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    <div class="row mt-5">
        <div class="col card" style="width: 24rem;">
            <div class="card-body">
                <img src="{{ asset('pictures/' ~ actions.picture) }}" alt="" width="100%">
                <h5 class="card-title">{{ actions.name }}</h5>
                <a href="/index" class="btn btn-primary">Back</a>
                <div class="test" style="float: right;">
                    <a href="/edit/{{ actions.id }}" class="btn btn-warning me-1">Edit</a>
                    <a href="/delete/{{ actions.id }}" class="btn btn-danger ms-1">Delete</a>
                </div>
            </div>
        </div>
  
    </div>
</div>
{% endblock %}