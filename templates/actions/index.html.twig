{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row row-cols-4">
        {% for action in actions %}
        <div class="col card mt-4 ms-2 me-2" style="width: 18rem;">
            <div class="card-body">
                <img src="{{ asset('pictures/' ~ action.picture) }}" alt="" width="100%">
                <h5 class="card-title">{{ action.name }}</h5>
                <a href="/details/{{ action.id }}" class="btn btn-primary">Details</a>
                <a href="/edit/{{ action.id }}" class="btn btn-warning">Edit</a>
                <a href="/delete/{{ action.id }}" class="btn btn-danger">Delete</a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}