{% extends 'base.html.twig' %}

{% block body %}
<h1 class="mt-5 text-center fw-bold">Events</h1>
<div class="container mt-5">
    <div class="row row-cols-4" style="margin: 0 auto;">
        {% for action in actions %}
        <div class="col card mt-4 ms-2 me-2" style="width: 19rem">
            <div class="card-body">
                <img src="{{ asset('pictures/' ~ action.picture) }}" alt="" width="100%" height="150px">
                <h5 class="card-title mt-3">{{ action.name }}</h5>
                <p>{{ action.date | date("D d.m.Y") }} at {{ action.time | date("G:i") }}</p>
                <p>{{ action.address }}</p>
                <a href="/details/{{ action.id }}" class="btn btn-primary" style="float: right;">Details</a>
                {# <div class="floatRight" style="float: right;">
                    <a href="/edit/{{ action.id }}" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/delete/{{ action.id }}" class="btn btn-danger btn-sm">Delete</a>
                </div> #}
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}