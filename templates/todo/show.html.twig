{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block body %}
    <h1>Library</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ library.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ library.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ library.date ? library.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ library.time ? library.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ library.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ library.picture }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ library.capacity }}</td>
            </tr>
            <tr>
                <th>ContactEmail</th>
                <td>{{ library.contactEmail }}</td>
            </tr>
            <tr>
                <th>ContactPhone</th>
                <td>{{ library.contactPhone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ library.address }}</td>
            </tr>
            <tr>
                <th>URL</th>
                <td>{{ library.URL }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_todo_index') }}">back to list</a>

    <a href="{{ path('app_todo_edit', {'id': library.id}) }}">edit</a>

    {{ include('todo/_delete_form.html.twig') }}
{% endblock %}
