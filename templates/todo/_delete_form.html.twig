<form
  method="post"
  action="{{ path('actions/delete.html.twig', { id: library.id }) }}"
  onsubmit="return confirm('Are you sure you want to delete this item?');"
>
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ library.id) }}"
  />
  <button class="btn btn-danger" style="width: 70px">Delete</button>
</form>
